<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_salgado_doce"
    tools:context=".Menu_doce_salgado">

    <ImageButton
        android:id="@+id/botao_salgados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="18dp"
        android:onClick="abrirSalgados"
        app:layout_constraintBottom_toTopOf="@+id/botao_doces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/botao_salgados" />

    <ImageButton
        android:id="@+id/botao_doces"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="21dp"
        android:onClick="abrirDoces"
        app:layout_constraintBottom_toTopOf="@+id/botao_voltar_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/botao_doce" />

    <ImageButton
        android:id="@+id/botao_voltar_main"
        android:layout_width="127dp"
        android:layout_height="69dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="27dp"
        android:onClick="abrirMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_doces"
        app:srcCompat="@drawable/botao_voltar" />
</androidx.constraintlayout.widget.ConstraintLayout>